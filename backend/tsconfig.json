{
  "compilerOptions": {
    "baseUrl": ".",
    "noImplicitAny": false,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "strict": true,
    "target": "es2017",
    "module": "commonjs",
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "verbatimModuleSyntax": false
  },
}
